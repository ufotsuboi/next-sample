generator client {
  provider = "prisma-client-js"
}

generator fabbrica {
  provider    = "prisma-fabbrica"
  output      = "../tests/__generated__/fabbrica"
  noTranspile = true
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int       @id @default(autoincrement())
  name    String
  Message Message[]
}

model Room {
  id      Int       @id @default(autoincrement())
  name    String
  Message Message[]
}

model Message {
  id      Int    @id @default(autoincrement())
  content String
  roomId  Int
  userId  Int
  user    User   @relation(fields: [userId], references: [id])
  Room    Room   @relation(fields: [roomId], references: [id])
}
